%h1 Sign in

.signup-wrapper
  .signup-form
    = form_for :session, url: login_path do |f|
      / = render 'shared/error_messages'

      = f.label :email
      = f.email_field :email

      = f.label :password
      = f.password_field :password

      = f.submit "Log-in", class: "signup-button"

    %p New user?
    = link_to "Sign up now!", signup_path
